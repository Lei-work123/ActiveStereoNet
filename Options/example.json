{
    "mode":"train",
    "deterministic": true,
    "gpu_ids": "0",
    "cpu_threads": "4",
    "dataset_name": "SceneFlow",

    "data": {
       "data_root": "I:/dataset/",
       "npy_root": "./Data",
       "test_split": 0.1,
       "val_split": 0.1,
